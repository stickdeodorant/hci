{
    "name": "hci/healthcare-insurance",
    "description": "Health Insurance Lead Generation Platform",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.0",
        "vlucas/phpdotenv": "^5.5",
        "guzzlehttp/guzzle": "^7.5",
        "monolog/monolog": "^3.0",
        "symfony/http-foundation": "^6.0",
        "nikic/fast-route": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "analyse": "phpstan analyse"
    }
